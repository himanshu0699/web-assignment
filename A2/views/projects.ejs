<!DOCTYPE html>
<html lang="en" data-theme="dim">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Projects</title>
    <link href="/css/main.css" rel="stylesheet" />
  </head>
  <body>
    <%- include('partials/navbar') %>

    <div class="container mx-auto p-6">
      <div class="hero bg-base-200 rounded-2xl mb-10">
        <div class="hero-content text-center">
          <div class="max-w-md">
            <h1 class="text-5xl font-bold mb-4">Projects</h1>
            <p>Explore projects by sector below.</p>
            <div class="flex justify-center flex-wrap gap-3 mt-4">
              <a href="/solutions/projects?sector=Land Sinks" class="btn btn-sm"
                >Land Sinks</a
              >
              <a href="/solutions/projects?sector=Industry" class="btn btn-sm"
                >Industry</a
              >
              <a
                href="/solutions/projects?sector=Transportation"
                class="btn btn-sm"
                >Transportation</a
              >
              <a
                href="/solutions/projects?sector=Electricity"
                class="btn btn-sm"
                >Electricity</a
              >
              <a
                href="/solutions/projects?sector=Food, Agriculture, and Land Use"
                class="btn btn-sm"
                >Food</a
              >
            </div>
          </div>
        </div>
      </div>

      <% if (projects && projects.length > 0) { %>
      <div class="overflow-x-auto">
        <table class="table table-zebra w-full">
          <thead>
            <tr>
              <th>Title</th>
              <th>Sector</th>
              <th>Summary</th>
              <th>Details</th>
            </tr>
          </thead>
          <tbody>
            <% projects.forEach(p => { %>
            <tr>
              <td><%= p.title %></td>
              <td>
                <a
                  href="/solutions/projects?sector=<%= p.sector %>"
                  class="btn btn-xs btn-outline"
                  ><%= p.sector %></a
                >
              </td>
              <td><%= p.summary_short %></td>
              <td>
                <a
                  href="/solutions/projects/<%= p.id %>"
                  class="btn btn-xs btn-primary"
                  >Details</a
                >
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
      <% } else { %>
      <p class="text-center text-error mt-8">No projects available.</p>
      <% } %>
    </div>
  </body>
</html>
