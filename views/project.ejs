<!DOCTYPE html>
<html lang="en" data-theme="dim">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= project.title %></title>
    <link href="/css/main.css" rel="stylesheet" />
  </head>
  <body>
    <%- include('partials/navbar') %>

    <div class="container mx-auto p-6">
      <div class="hero bg-base-200 rounded-2xl mb-10">
        <div class="hero-content text-center">
          <div class="max-w-md">
            <h1 class="text-4xl font-bold mb-4"><%= project.title %></h1>
            <p>Below, you will find detailed information about the project.</p>
          </div>
        </div>
      </div>

      <div class="card bg-base-100 shadow-xl mb-8">
        <figure>
          <img
            src="<%= project.feature_img_url %>"
            alt="<%= project.title %>"
          />
        </figure>
        <div class="card-body">
          <p class="mb-4"><%= project.intro_short %></p>
          <h3 class="font-semibold mb-2">Impact</h3>
          <p class="mb-4"><%= project.impact %></p>
          <a
            href="<%= project.original_source_url %>"
            target="_blank"
            class="btn btn-outline btn-primary"
            >Learn More</a
          >
        </div>
      </div>

      <div class="bg-base-200 p-6 rounded-xl text-center mb-6">
        <h3 class="text-xl font-semibold mb-2">Quote of the Day</h3>
        <p id="quote" class="italic"></p>
        <p id="author" class="font-semibold mt-2"></p>
      </div>

      <div class="text-center">
        <a
          href="#"
          onclick="history.back(); return false;"
          class="btn btn-secondary"
          >Go Back</a
        >
      </div>
    </div>

    <script>
      document.addEventListener("DOMContentLoaded", () => {
        fetch("https://dummyjson.com/quotes/random")
          .then((res) => res.json())
          .then((data) => {
            document.getElementById("quote").textContent = `"${data.quote}"`;
            document.getElementById("author").textContent = `â€“ ${data.author}`;
          })
          .catch(() => {
            document.getElementById("quote").textContent =
              "Unable to load quote.";
          });
      });
    </script>
  </body>
</html>
